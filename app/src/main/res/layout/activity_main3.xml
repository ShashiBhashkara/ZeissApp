<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zeiss.zeissapp.Main3Activity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#298c9b"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#49a1af"
            android:textSize="45dp"
            android:textColor="#fff"
            android:gravity="center"
            android:text="feedback" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:hint="Patient ID"
            android:gravity="top"
            android:textSize="25dp"
            android:textColorHint="#67aabb"
            android:background="@drawable/edittext_bg"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:hint="Write your diagnosis"
            android:gravity="top"
            android:textSize="25dp"
            android:textColorHint="#67aabb"
            android:background="@drawable/edittext_bg"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="125dp"
            android:ems="10"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:hint="Treatment Prescribed"
            android:gravity="top"
            android:textSize="25dp"
            android:textColorHint="#67aabb"
            android:background="@drawable/edittext_bg"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="125dp"
            android:ems="10"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="80dp"
            android:layout_marginRight="20dp"
            android:background="#49a1af"
            android:textColor="#fff"
            android:textSize="22dp"
            android:onClick="response"
            android:layout_height="wrap_content"
            android:text="send" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
